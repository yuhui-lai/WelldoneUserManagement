<Project>
  <PropertyGroup>
    <DeleteExistingFiles>false</DeleteExistingFiles>
    <ExcludeApp_Data>false</ExcludeApp_Data>
    <LaunchSiteAfterPublish>true</LaunchSiteAfterPublish>
    <LastUsedBuildConfiguration>Release</LastUsedBuildConfiguration>
    <LastUsedPlatform>Any CPU</LastUsedPlatform>
    <PublishProvider>FileSystem</PublishProvider>
    <PublishUrl>bin\Release\net8.0\publish\</PublishUrl>
    <WebPublishMethod>FileSystem</WebPublishMethod>
    <_TargetId>Folder</_TargetId>
    <!--測試環境-->
    <EnvironmentName>Staging</EnvironmentName>
    <WumClientDir>$(MSBuildProjectDirectory)\..\wum.client</WumClientDir>
  </PropertyGroup>

  <Target Name="NpmInstall" AfterTargets="AfterPublish">
    <Message Text="開始執行 npm install" Importance="high" />
    <Exec Command="npm install" WorkingDirectory="$(WumClientDir)" />
    <Message Text="npm install 執行完成" Importance="high" />
  </Target>

  <Target Name="NpmBuild" AfterTargets="NpmInstall">
    <Message Text="開始執行 npm build" Importance="high" />
    <Exec Command="npm run staging" WorkingDirectory="$(MSBuildProjectDirectory)\..\wum.client" />
    <Message Text="npm build 執行完成" Importance="high" />
  </Target>

  <Target Name="CopyWumClientDist" AfterTargets="NpmBuild">
    <Message Text="開始複製 wum.client 發佈檔到 wwwroot" Importance="high" />
    <ItemGroup>
      <DistFiles Include="$(WumClientDir)\dist\**\*" />
    </ItemGroup>
    <Copy
      SourceFiles="@(DistFiles)"
      DestinationFolder="$(PublishUrl)\wwwroot\%(RecursiveDir)"
    />
    <Message Text="wum.client 發佈檔複製完成" Importance="high" />
  </Target>
</Project>